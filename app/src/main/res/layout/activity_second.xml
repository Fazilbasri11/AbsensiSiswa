<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/loginbg">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        //bar name
        <carbon.widget.RelativeLayout
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:src="@drawable/admin"
                android:layout_width="70dp"
                android:layout_height="70dp"/>
            <LinearLayout
                android:paddingLeft="10dp"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_marginLeft="70dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fazil Basri"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:fontFamily="@font/sans__bold"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginLeft="70dp"
                    android:layout_height="wrap_content"
                    android:text="NISN : 144264"
                    android:textColor="#000000"
                    android:textSize="14dp"
                    android:fontFamily="@font/sans__bold"/>
            </LinearLayout>

            <carbon.widget.Button
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:background="@color/black"
                android:text="Logout"
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:carbon_cornerRadius="10dp" />
        </carbon.widget.RelativeLayout>

        //petak atas
        <carbon.widget.GridLayout
            android:layout_margin="10dp"
            app:alignmentMode="alignMargins"
            app:columnOrderPreserved="false"
            app:rowCount="2"
            app:columnCount="2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                app:cardElevation="6dp"
                app:cardCornerRadius="12dp"
                android:layout_margin="12dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingBottom="16dp"
                    android:gravity="center">
                    <ImageView
                        android:layout_marginTop="10dp"
                        android:src="@drawable/profile"
                        android:layout_width="80dp"
                        android:layout_height="80dp"/>

                    <carbon.widget.Button
                        android:layout_width="wrap_content"
                        android:layout_height="38dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="10dp"
                        android:text="Tambah Siswa"
                        android:textAllCaps="false"
                        android:id="@+id/bt_input"
                        app:carbon_cornerRadius="10dp" />
                    <!--<TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:textSize="18sp"
                        android:text="Pengajar"
                        />-->
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            //mapel
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                app:cardElevation="6dp"
                app:cardCornerRadius="12dp"
                android:layout_margin="12dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingBottom="16dp"
                    android:gravity="center">
                    <ImageView
                        android:src="@drawable/time"
                        android:layout_width="80dp"
                        android:layout_marginTop="10dp"
                        android:layout_height="80dp"/>
                    <carbon.widget.Button
                        android:layout_width="wrap_content"
                        android:layout_height="38dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="10dp"
                        android:text="Tampil Siswa"
                        android:textAllCaps="false"
                        android:id="@+id/bt_tampil"
                        app:carbon_cornerRadius="10dp" />
                    <!--<TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:textSize="18sp"
                        android:text="Cek Mapel"/>-->
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            //RekapNilai
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                app:cardElevation="6dp"
                app:cardCornerRadius="12dp"
                android:layout_margin="12dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingBottom="16dp"
                    android:gravity="center">
                    <ImageView
                        android:src="@drawable/book"
                        android:layout_width="80dp"
                        android:layout_marginTop="10dp"
                        android:layout_height="80dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:textSize="18sp"
                        android:text="Raport"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            //event
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                app:cardElevation="6dp"
                app:cardCornerRadius="12dp"
                android:layout_margin="12dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingBottom="16dp"
                    android:gravity="center">
                    <ImageView
                        android:src="@drawable/event"
                        android:layout_width="80dp"
                        android:layout_marginTop="10dp"
                        android:layout_height="80dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:textSize="18sp"
                        android:text="Event"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </carbon.widget.GridLayout>

        //pengumuman
        <carbon.widget.LinearLayout
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            app:carbon_cornerRadius="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:background="#B7FF0000">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sans__bold"
                android:textColor="@color/white"
                android:layout_margin="10dp"
                android:text="Pengumuman !"
                android:textSize="20dp" />
            <carbon.widget.LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:padding="10dp"
                android:background="@color/white">
                <ImageView
                    android:src="@drawable/admin"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>

                //data kelas
                <carbon.widget.LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:paddingBottom="10dp"
                    android:background="@color/white">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sans__bold"
                        android:text="Covid Information"
                        android:textSize="18sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="lipsum as it is sometimes known, is dummy text used in laying out print,graphic or web designs. The passage is attributed to an unknown ..."
                        android:textSize="12sp"/>

                    <carbon.widget.Button
                        android:layout_width="wrap_content"
                        android:layout_height="33dp"
                        android:padding="5dp"
                        android:layout_marginTop="10dp"
                        android:background="#5e3f7d"
                        android:textColor="@color/white"
                        android:text="Selengkapnya.."
                        android:textAllCaps="false"/>

                </carbon.widget.LinearLayout>
            </carbon.widget.LinearLayout>

        </carbon.widget.LinearLayout>

        //card absen
        <carbon.widget.LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            app:carbon_cornerRadius="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:background="#B3FFFFFF">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sans__bold"
                android:layout_margin="10dp"
                android:text="Absen Kehadiran"
                android:textSize="20dp" />
            <carbon.widget.LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:padding="10dp"
                android:background="@color/white">
                <ImageView
                    android:src="@drawable/admin"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>

                //data kelas
                <carbon.widget.LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:paddingBottom="10dp"
                    android:background="@color/white">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sans__bold"
                        android:text="Data Mining"
                        android:textSize="18sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Selasa 12-September-2021"
                        android:textSize="12sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Alexander M.Si"
                        android:textSize="12sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Link : www.googlemeet.com"
                        android:textColor="#FF5E3F7D"
                        android:textSize="14sp"/>

                    <carbon.widget.Button
                        android:layout_width="wrap_content"
                        android:layout_height="33dp"
                        android:layout_marginTop="10dp"
                        android:background="#5e3f7d"
                        android:textColor="@color/white"
                        android:text="Absen!"
                        android:textAllCaps="false"/>

                </carbon.widget.LinearLayout>
            </carbon.widget.LinearLayout>

        </carbon.widget.LinearLayout>

        //Tugas mendatang
        <carbon.widget.LinearLayout
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            app:carbon_cornerRadius="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:background="#B3FFFFFF">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tugas Mendatang"
                android:layout_margin="10dp"
                android:textSize="20dp"
                android:fontFamily="@font/sans__bold"/>
            <carbon.widget.LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:padding="10dp"
                android:background="@color/white">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/admin"
                        android:layout_width="50dp"
                        android:layout_height="50dp"/>
                    <ImageView
                        android:src="@drawable/admin"
                        android:layout_width="50dp"
                        android:layout_marginTop="60dp"
                        android:layout_height="50dp"/>
                </LinearLayout>


                //data kelas
                <carbon.widget.LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:paddingBottom="10dp"
                    android:background="@color/white">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sans__bold"
                        android:text="Ilmu Pengetahuan Alam"
                        android:textSize="18sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tenggat"
                        android:fontFamily="@font/sans__bold"
                        android:textColor="#FF0019"
                        android:textSize="14sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Selasa 12-September-2021"
                        android:textSize="12sp"/>

                    <carbon.widget.Button
                        android:layout_width="wrap_content"
                        android:layout_height="33dp"
                        android:layout_marginTop="10dp"
                        android:background="#5e3f7d"
                        android:textColor="@color/white"
                        android:text="Apply"
                        android:textAllCaps="false"/>

                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sans__bold"
                        android:text="Al-Quran Hadist"
                        android:textSize="18sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tenggat"
                        android:fontFamily="@font/sans__bold"
                        android:textColor="#FF0019"
                        android:textSize="14sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Selasa 12-September-2021"
                        android:textSize="12sp"/>

                    <carbon.widget.Button
                        android:layout_width="wrap_content"
                        android:layout_height="33dp"
                        android:layout_marginTop="10dp"
                        android:background="#5e3f7d"
                        android:textColor="@color/white"
                        android:text="Apply"
                        android:textAllCaps="false"/>

                </carbon.widget.LinearLayout>
            </carbon.widget.LinearLayout>
        </carbon.widget.LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Absen Siswa-CKdev 2021"
            android:gravity="center"
            android:fontFamily="@font/sans__bold"
            android:layout_marginBottom="30dp"/>


    </LinearLayout>

</ScrollView>